{
  "eslint.quiet": true,
  "coc.preferences.formatOnType": false,
  "tsserver.formatOnType": false,
  "tsserver.npm": "/usr/bin/npm",
  "typescript.preferences.importModuleSpecifier": "non-relative",
  "coc.preferences.formatOnSaveFiletypes": ["javascript", "javascriptreact", "typescript", "typescriptreact", "go", "ruby"],
  "languageserver": {
    "bash": {
      "command": "bash-language-server",
      "args": ["start"],
      "filetypes": ["sh"]
    },
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git/", ".hg/"],
      "filetypes": ["go"],
      "initializationOptions": {
        "usePlaceholders": true
      }
    },
    "terraform": {
      "command": "terraform-ls",
      "args": ["serve"],
      "filetypes": [
        "terraform",
        "tf"
      ],
      "initializationOptions": {},
      "settings": {}
    }
  },
  "diagnostic-languageserver.filetypes": {
    "sh": "shellcheck"
  },
  "python": {
    "path": "python3"
  },

  "solargraph.docs": "https://github.com/neoclide/coc-solargraph/issues/3",
  "solargraph.diagnostics": true,
  "solargraph.autoformat": true,
  "solargraph.formatting": true,
  "solargraph.hover": true
}
